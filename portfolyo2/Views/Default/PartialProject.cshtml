@model List<portfolyo2.Models.tbl_project>
<section id="portfolio" class="portfolio section light-background">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Projects</h2>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">

            <ul class="portfolio-filters isotope-filters" data-aos="fade-up" data-aos-delay="100">
                <li data-filter="*" class="filter-active">All</li>
                <li data-filter=".filter-mobil">Mobil</li>
                <li data-filter=".filter-web">Web</li>
                <li data-filter=".filter-game">Game</li>
            </ul><!-- End Portfolio Filters -->

            <div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">

                @foreach (var item in Model)
                {
                    if (item.tbl_category != null)
                    {
                        <div class="col-lg-4 col-md-6 portfolio-item isotope-item @(item.tbl_category.CategoryName == "Mobil" ? "filter-mobil" : item.tbl_category.CategoryName == "Web" ? "filter-web" : "filter-game")">

                            <img src="@item.image1" class="img-fluid" alt="@item.ProjectName">
                            <div class="portfolio-info">
                                <h4>@item.ProjectName</h4>
                                <p>@item.Description</p>
                                <a href="@item.image1" data-gallery="portfolio-gallery-app" class="glightbox preview-link"><i class="bi bi-zoom-in"></i></a>
                                <a href="@item.image2" data-gallery="portfolio-gallery-app" class="glightbox preview-link"><i class="bi bi-zoom-in"></i></a>
                                <a href="@item.image3" data-gallery="portfolio-gallery-app" class="glightbox preview-link"><i class="bi bi-zoom-in"></i></a>
                                <a href="@item.ProjectLink" title="More Details" class="details-link"><i class="bi bi-link-45deg"></i></a>
                            </div>
                        </div><!-- End Portfolio Item -->
                    }
                    else
                    {
                        <!-- Kategori olmadan içerik -->
                        <div class="col-lg-4 col-md-6 portfolio-item isotope-item">
                            <img src="@item.image1" class="img-fluid" alt="@item.ProjectName">
                            <div class="portfolio-info">
                                <h4>@item.ProjectName</h4>
                                <p>@item.Description</p>
                                <a href="@item.image1" data-gallery="portfolio-gallery-app" class="glightbox preview-link"><i class="bi bi-zoom-in"></i></a>

                                <a href="@item.ProjectLink" title="More Details" class="details-link"><i class="bi bi-link-45deg"></i></a>
                            </div>
                        </div><!-- End Portfolio Item -->
                    }
                }


            </div><!-- End Portfolio Container -->

        </div>

    </div>

</section>
