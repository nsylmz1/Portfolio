<body class="index-page">

    <header id="header" class="header d-flex align-items-center sticky-top">
        <div class="container-fluid container-xl position-relative d-flex align-items-center justify-content-between">

            <a href="index.html" class="logo d-flex align-items-center">
                <!-- Uncomment the line below if you also wish to use an image logo -->
                <!-- <img src="assets/img/logo.png" alt=""> -->
                <h1 class="sitename">Enes Yılmaz</h1>
            </a>

            <nav id="navmenu" class="navmenu">
                <ul>
                    <li><a href="#hero" class="active">Home</a></li>
                    <li><a href="#about">About</a></li>
                    <li><a href="#services">Services</a></li>
                    <li><a href="#portfolio">Portfolio</a></li>
                    <li><a href="#team">Skils</a></li>
                    <li><a href="#contact">Contact</a></li>
                </ul>
                <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
            </nav>

        </div>
    </header>

    <main class="main">

        <!-- Hero Section -->
        <section id="hero" class="hero section dark-background">

            <div class="container text-center" data-aos="fade-up" data-aos-delay="100">
                
                <h2>Hi, I'm Enes!</h2>
                <p>I am a senior student living in Istanbul<br></p>
                <a href="#about" class="btn-scroll" title="Scroll Down"><i class="bi bi-chevron-down"></i></a>
            </div>

        </section><!-- /Hero Section -->
        <!-- About Section -->
        @Html.Action("PartialAbout", "Default")<!-- /About Section -->
        <!-- Skills Section -->
        @Html.Action("PartialSkils","Default")<!-- /Skills Section -->
        <!-- Resume Section -->
        <section id="resume" class="resume section light-background">

            <!-- Section Title -->
            <div class="container section-title" data-aos="fade-up">
                <h2>Resume</h2>
                
            </div><!-- End Section Title -->

            <div class="container">

                <div class="row"> 

                    @Html.Action("PartialEducation","Default")
                    @Html.Action("PartialJobs","Default")
                </div>

            </div>

        </section><!-- /Resume Section -->
        <!-- Services Section -->
       @Html.Action("PartialServices", "Default")<!-- /Services Section -->
        <!-- Portfolio Section -->
        @Html.Action("PartialProject", "Default")
        <!-- Testimonials Section -->
        @Html.Action("PartialTestimonial" , "Default")
        <!-- /Testimonials Section -->
        <!-- Contact Section -->
        <section id="contact" class="contact section">

            <!-- Section Title -->
            <div class="container section-title" data-aos="fade-up">
                <h2>Contact</h2>
              
            </div><!-- End Section Title -->

            <div class="container" data-aos="fade" data-aos-delay="100">

                <div class="row gy-4">

                    @Html.Action("PartialContact" , "Default")
                    @Html.Action("PartialMessage" , "Default")
                </div>

            </div>

        </section><!-- /Contact Section -->

    </main>

    <footer id="footer" class="footer light-background">
        <div class="container">
            <h3 class="sitename">Social</h3>
            <p></p>
            <div class="social-links d-flex justify-content-center">
                <!-- GitHub -->
                <a href="https://github.com/nsylmz1" target="_blank">
                    <i class="bi bi-github"></i>
                </a>

                <!-- LinkedIn -->
                <a href="https://www.linkedin.com/in/ns-ylmz/" target="_blank">
                    <i class="bi bi-linkedin"></i>
                </a>

                <!-- Facebook -->
                <a href="https://www.facebook.com/enes.y.lmaz.350243/?locale=tr_TR" target="_blank">
                    <i class="bi bi-facebook"></i>
                </a>

                <!-- Instagram -->
                <a href="https://www.instagram.com/_ns_ylmz/" target="_blank">
                    <i class="bi bi-instagram"></i>
                </a>

                </a>


            </div>
            <div class="container">
                <div class="copyright">
                </div>
                
            </div>
