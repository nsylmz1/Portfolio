@model List<portfolyo2.Models.tbl_about>
@{
    var birthday = Model[0].BirthDay.HasValue
        ? Model[0].BirthDay.Value.ToString("dd.MM.yyyy")
        : "";
}

<section id="about" class="about section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>About</h2>
        <p></p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4 justify-content-center">
            <div class="col-lg-4">
                <img src="~/Lonely/assets/img/IMG_4294.JPG" class="img-fluid" alt="">
            </div>
            <div class="col-lg-8 content">
                <h2>@Model[0].Tittle</h2>
                <p class="fst-italic py-3">
                    @Model[0].Description1
                </p>
                <div class="row">
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>Birthday:</strong> <span>@birthday</span></li>

                            <li><i class="bi bi-chevron-right"></i> <strong>Github:</strong> <span>@Model[0].WebSite</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Phone:</strong> <span>@Model[0].Phone</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>City:</strong> <span>@Model[0].City</span></li>
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>Age:</strong> <span>@Model[0].Age</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Degree:</strong> <span>@Model[0].Tittle</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span>@Model[0].Email</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Freelance:</strong> <span>@Model[0].Freelance</span></li>
                        </ul>
                    </div>
                </div>
                <p class="py-3">
                    @Model[0].Description2
                </p>
            </div>
        </div>

    </div>

</section>
