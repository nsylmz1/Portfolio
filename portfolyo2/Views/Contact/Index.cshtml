@model List<portfolyo2.Models.tbl_contact>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>İletişim</h2>


<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ConcactID</th>
                <th>Description</th>
                <th>Adress</th>
                <th>Email</th>
                <th>Phone</th>
             

                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ConcactID</td>
                    <td>@item.Description</td>
                    <td>@item.Adress</td>
                    <td>@item.Email</td>
                    <td>@item.phone</td>
                    

                    <td><a href="/Contact/UpdateContact/@item.ConcactID" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Contact/RemoveContact/@item.ConcactID" class="btn btn-danger">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Contact/CreateContact/" class="btn btn-secondary">Oluştur</a>
</div>